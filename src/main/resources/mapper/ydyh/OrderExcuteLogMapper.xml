<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pda.api.mapper.slave.OrderExcuteLogMapper">

    <select id="selectCheckedExcuteLog" resultType="com.pda.api.domain.entity.OrderExcuteLog">
        select *
        from order_excute_log
        where patient_id = #{patientId} and visit_id = #{visitId}
        <if test='types != null and types.size() > 0'>
            and type in
            <foreach collection="types" index="index" item="type" separator="," close=")" open="(">
                #{type}
            </foreach>
        </if>
        and check_status = '1' and excute_date = #{excuteDate}
        <if test='orderNos != null and orderNos.size() > 0'>
            and order_no in
            <foreach collection="orderNos" index="index" item="orderNo" separator="," close=")" open="(">
                #{orderNo}
            </foreach>
        </if>
        order by check_time
    </select>

    <select id="selectCheckedLatestLog" resultType="com.pda.api.domain.entity.OrderExcuteLog">
        select distinct patient_id,visit_id,order_no
        from order_excute_log
        where patient_id = #{patientId} and visit_id = #{visitId}
        <if test='types != null and types.size() > 0'>
            and type in
            <foreach collection="types" index="index" item="type" separator="," close=")" open="(">
                #{type}
            </foreach>
        </if>
        and check_status = '1' and excute_date = #{excuteDate}
        <if test='orderNos != null and orderNos.size() > 0'>
            and order_no in
            <foreach collection="orderNos" index="index" item="orderNo" separator="," close=")" open="(">
                #{orderNo}
            </foreach>
        </if>
    </select>

    <select id="selectExcuteLog" resultType="com.pda.api.domain.entity.OrderExcuteLog">
        select *
        from order_excute_log
        where patient_id = #{patientId} and visit_id = #{visitId}
        and excute_date = #{excuteDate}
        <if test='types != null and types.size() > 0'>
            and type in
            <foreach collection="types" index="index" item="type" separator="," close=")" open="(">
                #{type}
            </foreach>
        </if>
        <if test='orderNos != null and orderNos.size() > 0'>
            and order_no in
            <foreach collection="orderNos" index="index" item="orderNo" separator="," close=")" open="(">
                #{orderNo}
            </foreach>
        </if>
        order by check_time
    </select>
    <select id="selectExcuteLatestLog" resultType="com.pda.api.domain.entity.OrderExcuteLog">
        select distinct patient_id,visit_id,order_no
        from order_excute_log
        where patient_id = #{patientId} and visit_id = #{visitId}
        and type = #{type} and excute_date = #{excuteDate}
        <if test='orderNos != null and orderNos.size() > 0'>
            and order_no in
            <foreach collection="orderNos" index="index" item="orderNo" separator="," close=")" open="(">
                #{orderNo}
            </foreach>
        </if>
    </select>
</mapper>
